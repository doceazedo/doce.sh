    "svelte": "^4.0.5",
    "svelte-check": "^3.4.6",
    "svelte-feather-icons": "^4.0.1",
    "svelte-preprocess": "^5.0.4",
    "tslib": "^2.6.0",
    "typescript": "~5.1.6",
    "vite": "^5.0.0",
    "vite-node": "^0.33.0"
  },
  "type": "module",
  "dependencies": {
    "@giscus/svelte": "^2.3.0",
    "dayjs": "^1.11.9",
    "deep-email-validator": "^0.1.21",
    "dotenv": "^16.3.1",
    "fast-xml-parser": "^4.2.5",
    "simple-icons": "^9.6.0",
    "spotify-web-api-node": "^5.0.2",
    "svelte-french-toast": "^1.1.0"
  }
